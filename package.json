{
  "name": "chunklands",
  "version": "1.0.0",
  "description": "3D Game in NodeJS/OpenGL",
  "scripts": {
    "play": "node src/app.js",
    "preplay": "cross-env CMAKE_BUILD_PARALLEL_LEVEL=8 cmake-js build",
    "start": "concurrently --handle-input --kill-others-on-fail --names \"native,app\" -c \"bgBlue.bold,bgCyan.bold\" \"npm run _native:dev\" \"npm run _app:dev\"",
    "clean": "cmake-js clean",
    "_build:dev": "cross-env CMAKE_BUILD_PARALLEL_LEVEL=8 cmake-js build --debug",
    "_native:dev": "nodemon --watch src -e h,cc --exec \"npm run _build:dev\"",
    "_app:dev": "nodemon --delay 3 --watch src --watch build/Debug --watch resource -e js,node,glsl --exec \"node src/app.js\"",
    "debug": "gdb -ex=r --args node src/app.js",
    "test": "node src/test.js",
    "pretest": "npm run _build:dev"
  },
  "keywords": [
    "game",
    "c++",
    "opengl",
    "nodejs",
    "napi",
    "node-addon-api",
    "boost"
  ],
  "license": "MIT",
  "dependencies": {
    "image-size": "^0.8.3",
    "jimp": "^0.9.3",
    "piscina": "^1.2.0"
  },
  "devDependencies": {
    "bindings": "^1.5.0",
    "cmake-js": "^6.1.0",
    "concurrently": "^4.1.2",
    "cross-env": "^7.0.2",
    "node-addon-api": "^2.0.0",
    "nodemon": "^2.0.3"
  }
}
